{
  "name": "root",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "prepare": "yarn build",
    "build": "tsc --build",
    "test": "jest --passWithNoTests",
    "cov": "jest --coverage",
    "lint": "eslint . --ext [js,ts,tsx] --ignore-path .gitignore --cache --fix",
