  },
  "devDependencies": {
    "@types/eslint": "^7.28.0",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.171",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.3.3",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.31.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
